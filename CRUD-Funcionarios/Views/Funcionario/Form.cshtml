@model FuncionarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Ferramenta</h2>
<form class="form-group" asp-action="Salvar">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
    
        <label class="control-label">ID</label>
    @if (ViewBag.Operacao == "I")
    {
        <input type="number" asp-for="Id" class="form-control"/>
    }
    else
    {
        <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
    }
    <span asp-validation-for="Id" class="text-danger"></span>
    <br />
    <label class="control-label">Nome do Funcionário</label>
    <input class="form-control" asp-for="Nome" />
    <span asp-validation-for="Nome" class="text-danger"></span>
    <br />
    <label class="control-label">Tipo de Funcionário</label>
    <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<FuncTipo>()" class="form-control"></select>
    <br />
    <label class="control-label">Está Ativo?</label>
    <input class="form-check" asp-for="Ativo" />
    <br />
    <input type="submit" class="btn btn-success" value="Salvar dados" />
</form>